<div class="page">
    <h1>answers</h1>
    {{#unless isLoggedIn}}
        <p>You need to login to see this page</p>
    {{/unless}}
    {{#if isLoggedIn}}
        {{#if dbError}}
        <p>Cant display page right now, try again later</p>
        {{else}}
            <form method="POST">
                <div class="form-group">
                    <label class="form-label" for="input-example-1">Question</label>
                    <input class="form-input" type="text" id="input-example-1" name="question" value="{{faq.question}}">
                </div>
                                <div class="form-group">
                    <label class="form-label" for="input-example-3">Body</label>
                    <textarea class="form-input" type="text" name="answer" id="input-example-3" rows="5">{{faq.answer}}</textarea>
                </div>
                <button class="btn btn-primary input-group-btn">Submit</button></form>
                </div>
            </form>
        {{/if}}
    {{/if}}
</div>